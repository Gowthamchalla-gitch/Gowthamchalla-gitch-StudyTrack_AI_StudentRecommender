# Core imports + database location
import sqlite3
import pandas as pd
import ipywidgets as wd
from IPython.display import display, clear_output
import traceback

DB_FILE = "student_tracker.db"
# Initialize DB + tables (executed one time)
conn = sqlite3.connect(DB_FILE)
cur = conn.cursor()

cur.execute("""
CREATE TABLE IF NOT EXISTS study_entries (
    entry_id INTEGER PRIMARY KEY AUTOINCREMENT,
    learner_name TEXT,
    course TEXT,
    time_spent INTEGER,
    covered_topics TEXT,
    log_date TEXT
)
""")

cur.execute("""
CREATE TABLE IF NOT EXISTS system_admins(
    admin_id INTEGER PRIMARY KEY AUTOINCREMENT,
    username TEXT UNIQUE,
    password TEXT
)
""")

# default admin
cur.execute("INSERT OR IGNORE INTO system_admins (username,password) VALUES (?,?)",
            ("root","pass123"))

conn.commit()
conn.close()

print("Database initialized.")
# Widgets for student data entry
w_name = wd.Text(description="Student:")
w_course = wd.Text(description="Subject:")
w_time = wd.IntSlider(description="Hours", min=1, max=12, value=1)
w_topics = wd.Textarea(description="Topics:", layout=wd.Layout(width="55%"))
w_date = wd.DatePicker(description="On:")

btn_save = wd.Button(description="Add Record", button_style="success")
btn_view = wd.Button(description="Load Records", button_style="info")

log_display = wd.Output()
table_display = wd.Output()

display(w_name, w_course, w_time, w_topics, w_date, btn_save, btn_view, log_display, table_display)
def add_record(x):
    with log_display:
        clear_output()

        if not w_name.value.strip():
            print("Name missing.")
            return
        if not w_course.value.strip():
            print("Subject missing.")
            return
        if w_date.value is None:
            print("Pick a date.")
            return

        try:
            conn = sqlite3.connect(DB_FILE)
            cur = conn.cursor()
            cur.execute("""
                INSERT INTO study_entries (learner_name, course, time_spent, covered_topics, log_date)
                VALUES (?, ?, ?, ?, ?)
            """, (
                w_name.value.strip(),
                w_course.value.strip(),
                int(w_time.value),
                w_topics.value.strip(),
                str(w_date.value)
            ))
            conn.commit()
            conn.close()

            print("✔ Record saved.")

            # reset fields
            w_name.value = ""
            w_course.value = ""
            w_time.value = 1
            w_topics.value = ""
            w_date.value = None

        except Exception as e:
            traceback.print_exc()
            print("Error:", e)


def load_records(y=None):
    with table_display:
        clear_output()
        try:
            conn = sqlite3.connect(DB_FILE)
            df = pd.read_sql_query("SELECT * FROM study_entries ORDER BY entry_id DESC", conn)
            conn.close()
            display(df)
        except Exception as e:
            traceback.print_exc()
            print("Error:", e)

btn_save.on_click(add_record)
btn_view.on_click(load_records)

load_records()
admin_user = wd.Text(description="User:")
admin_pass = wd.Password(description="Pass:")
btn_login = wd.Button(description="Sign In", button_style="primary")
admin_msg = wd.Output()

display(admin_user, admin_pass, btn_login, admin_msg)
def admin_dashboard():

    btn_show = wd.Button(description="Refresh Logs", button_style="info")

    del_id = wd.IntText(description="Remove ID:")
    btn_del = wd.Button(description="Delete", button_style="danger")

    up_id = wd.IntText(description="Edit ID:")
    up_hours = wd.IntText(description="Hours:")
    btn_up = wd.Button(description="Apply", button_style="warning")

    # Create new log (admin)
    c_name = wd.Text(description="Name:")
    c_sub = wd.Text(description="Subject:")
    c_hr = wd.IntText(description="Hours:", value=1)
    c_top = wd.Text(description="Topics:")
    c_date = wd.DatePicker(description="Date:")
    btn_new = wd.Button(description="Add Entry", button_style="success")

    panel_out = wd.Output()

    # Functions
    def show_all(b):
        with panel_out:
            clear_output()
            load_records()

    def remove(b):
        with panel_out:
            clear_output()
            try:
                conn = sqlite3.connect(DB_FILE)
                cur = conn.cursor()
                cur.execute("DELETE FROM study_entries WHERE entry_id=?", (del_id.value,))
                conn.commit()
                conn.close()
                print("Deleted (if existed)")
                load_records()
            except Exception as e:
                traceback.print_exc()

    def edit(b):
        with panel_out:
            clear_output()
            try:
                conn = sqlite3.connect(DB_FILE)
                cur = conn.cursor()
                cur.execute("UPDATE study_entries SET time_spent=? WHERE entry_id=?",
                            (up_hours.value, up_id.value))
                conn.commit()
                conn.close()
                print("Updated (if ID existed)")
                load_records()
            except Exception as e:
                traceback.print_exc()

    def create_admin(b):
        with panel_out:
            clear_output()
            if not c_name.value or not c_sub.value or c_date.value is None:
                print("Fill all fields.")
                return
            try:
                conn = sqlite3.connect(DB_FILE)
                cur = conn.cursor()
                cur.execute("""
                    INSERT INTO study_entries (learner_name, course, time_spent, covered_topics, log_date)
                    VALUES (?, ?, ?, ?, ?)
                """, (
                    c_name.value, c_sub.value, int(c_hr.value),
                    c_top.value, str(c_date.value)
                ))
                conn.commit()
                conn.close()
                print("New entry added.")
                load_records()
            except Exception as e:
                traceback.print_exc()

    # Bind buttons
    btn_show.on_click(show_all)
    btn_del.on_click(remove)
    btn_up.on_click(edit)
    btn_new.on_click(create_admin)

    return wd.VBox([
        wd.HBox([btn_show]),
        wd.HBox([del_id, btn_del]),
        wd.HBox([up_id, up_hours, btn_up]),
        wd.HTML("<hr><b>Add New Log</b>"),
        wd.HBox([c_name, c_sub]),
        wd.HBox([c_hr, c_top, c_date]),
        btn_new,
        panel_out
    ])

def verify_login(b):
    with admin_msg:
        clear_output()
        if admin_user.value == "root" and admin_pass.value == "pass123":
            print("✔ Logged in as admin")
            display(admin_dashboard())
        else:
            print("❌ Invalid details")

btn_login.on_click(verify_login)

